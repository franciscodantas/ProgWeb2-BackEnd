generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 Int         @id
  name               String
  identityProviderId String
  code               String
  type               String
  email              String
  createdAt          DateTime    @default(now())
  updatedAt          DateTime    @updatedAt
  questions          Question[]
}

model Adm {
  id                 Int         @id
  name               String
  email              String
  createdAt          DateTime    @default(now())
  updatedAt          DateTime    @updatedAt
}

model Discipline {
  id              Int        @id @default(autoincrement())
  courseCode      String
  curriculumCode  String
  subjectCode     String
  name            String
  type            String
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  questions       Question[]
}

model Question {
  id            Int         @id @default(autoincrement())
  title         String
  content       String
  answer        String
  image         Bytes?
  authorId      Int
  disciplineId  Int
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  author        User        @relation(fields: [authorId], references: [id])
  discipline    Discipline  @relation(fields: [disciplineId], references: [id])
}